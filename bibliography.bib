@article{menchinelli_reliability_engineering_2018,
  title = {A {{Reliability Engineering Approach}} for {{Managing Risks}} in {{CubeSats}}},
  author = {Menchinelli, Alessandro and Ingiosi, Francesca and Pamphili, Ludovico and Marzioli, Paolo and Patriarca, Riccardo and Costantino, Francesco and Piergentili, Fabrizio},
