@article{latachi_reusable_reliable_2020,
  title = {Reusable and {{Reliable Flight}}-{{Control Software}} for a {{Fail}}-{{Safe}} and {{Cost}}-{{Efficient Cubesat Mission}}: {{Design}} and {{Implementation}}},
