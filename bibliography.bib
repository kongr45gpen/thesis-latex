@article{faure_lean_satellites_2017,
  title = {Toward Lean Satellites Reliability Improvement Using {{HORYU}}-{{IV}} Project as Case Study},
  author = {Faure, Pauline and Tanaka, Atomu and Cho, Mengu},
  date = {2017-04-01},
