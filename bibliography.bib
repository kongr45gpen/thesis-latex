@thesis{gupta_analysis_single_2017,
  title = {Analysis of Single Event Radiation Effects and Fault Mechanisms in {{SRAM}}, {{FRAM}} and {{NAND Flash}} : Application to the {{MTCube}} Nanosatellite Project},
